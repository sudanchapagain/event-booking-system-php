{% extends "base.jinja" %}
{% block title %}Profile - Chautari{% endblock %}
{% block extra_css %}{% endblock %}
{% block content %}
    <main class="max-w-xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold tracking-normal mt-12">Profile</h1>
        <div class="block border border-gray-300 rounded-lg p-8 mb-16 bg-gray-50">
            {% if update_success %}<p class="text-green-600 text-center mb-4">Profile updated successfully!</p>{% endif %}
            <div>
                <img src="/static/images/default-avatar.png"
                     alt="Profile Picture"
                     class="w-36 h-36 rounded-full mx-auto block border border-gray-300">
            </div>
            <p class="text-sm mt-4 font-bold uppercase text-gray-500">Username</p>
            <p class="text-base font-bold text-gray-800 uppercase border border-gray-300 rounded-md p-2 mt-1 bg-gray-100">
                {{
                user.username }}
            </p>
            <p class="text-sm mt-4 font-bold uppercase text-gray-500">Email</p>
            <p class="text-base font-bold text-gray-800 uppercase border border-gray-300 rounded-md p-2 mt-1 bg-gray-100">
                {{
                user.email }}
            </p>
            <p class="text-sm mt-4 font-bold uppercase text-gray-500">Phone</p>
            <p class="text-base font-bold text-gray-800 uppercase border border-gray-300 rounded-md p-2 mt-1 bg-gray-100">
                {{ user.user_phone | default("N/A") }}
            </p>
            <br>
            <a href="/settings"
               class="block w-full p-3 text-center bg-[#ff6438] text-white rounded-md mt-4 no-underline hover:bg-[#ff6438]">Edit
            Profile</a>
        </div>
    </main>
{% endblock %}
