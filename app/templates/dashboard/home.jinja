{% extends "dashboard/base.jinja" %}
{% block dashboard_content %}
    <h1 class="text-left text-4xl mt-5 text-[#ff6438]">Dashboard</h1>
    {% if not is_admin %}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-3xl p-6 bg-white rounded-3xl mx-auto">
            <div class="col-span-full md:col-span-2 flex flex-col justify-between text-center p-6 bg-gray-100 border border-gray-200 rounded-2xl shadow-md transition-all duration-300 ease-in-out hover:bg-gray-200">
                <h2 class="mb-2 text-2xl font-bold text-black">See Booking on Your Events</h2>
                <p class="text-sm text-gray-600 leading-relaxed mb-4">Check who's attending and manage bookings with ease.</p>
                <a href="/dashboard/bookings">
                    <button class="w-full p-3 text-sm font-semibold text-white bg-black rounded-lg cursor-pointer transition-colors duration-300 ease-in-out hover:bg-gray-800">
                        View Bookings
                    </button>
                </a>
            </div>
            <div class="col-span-full md:col-span-1 bg-black text-white flex flex-col justify-between text-center p-6 border border-gray-200 rounded-2xl shadow-md transition-all duration-300 ease-in-out hover:bg-gray-800">
                <h2 class="mb-2 text-xl font-semibold text-white">Sales on Your Event</h2>
                <p class="text-sm text-gray-300 leading-relaxed mb-4">See ticket sales and revenue trends.</p>
                <a href="/dashboard/sales">
                    <button class="w-full p-3 text-sm font-semibold text-white bg-[#ff6438] rounded-lg cursor-pointer transition-colors duration-300 ease-in-out hover:bg-[#ff6438]">
                        View Sales
                    </button>
                </a>
            </div>
            <div class="col-span-full md:col-span-1 flex flex-col justify-between text-center p-6 bg-gray-100 border border-gray-200 rounded-2xl shadow-md transition-all duration-300 ease-in-out hover:bg-gray-200">
                <h2 class="mb-2 text-lg font-semibold text-black">Explore Other Events</h2>
                <p class="text-sm text-gray-600 leading-relaxed mb-4">Discover exciting events curated just for you.</p>
                <a href="/explore">
                    <button class="w-full p-3 text-sm font-semibold text-white bg-gray-500 rounded-lg cursor-pointer transition-colors duration-300 ease-in-out hover:bg-gray-600">
                        Explore
                    </button>
                </a>
            </div>
            <div class="col-span-full md:col-span-1 flex flex-col justify-between text-center p-6 bg-gray-100 border border-gray-200 rounded-2xl shadow-md transition-all duration-300 ease-in-out hover:bg-gray-200">
                <h2 class="mb-2 text-lg font-semibold text-black">View Your Profile</h2>
                <p class="text-sm text-gray-600 leading-relaxed mb-4">Manage your personal details and preferences.</p>
                <a href="/profile">
                    <button class="w-full p-3 text-sm font-semibold text-white bg-gray-500 rounded-lg cursor-pointer transition-colors duration-300 ease-in-out hover:bg-gray-600">
                        View Profile
                    </button>
                </a>
            </div>
            <div class="col-span-full md:col-span-1 flex flex-col justify-between text-center p-6 bg-gray-100 border border-gray-200 rounded-2xl shadow-md transition-all duration-300 ease-in-out hover:bg-gray-200">
                <h2 class="mb-2 text-base font-medium text-black">View Settings</h2>
                <p class="text-sm text-gray-600 leading-relaxed mb-4">Manage your account and preferences with ease.</p>
                <a href="/settings">
                    <button class="w-full p-3 text-sm font-semibold text-white bg-gray-500 rounded-lg cursor-pointer transition-colors duration-300 ease-in-out hover:bg-gray-600">
                        Settings
                    </button>
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}
