{% extends "dashboard/base.jinja" %}
{% block dashboard_content %}
    <h1 class="text-left text-4xl mt-5 text-[#ff6438]">Sales</h1>
    {% if sales_data %}
        {% for sale in sales_data %}
            <h2 class="text-2xl font-bold mt-4">{{ sale.event_title }}</h2>
            {% if sale.ticket_price == 0 %}
                <p class="text-gray-600">This is a free event, so no revenue is generated.</p>
            {% else %}
                <p class="text-gray-700">
                    <b>Ticket Price</b>: NPR {{ sale.ticket_price }}
                </p>
                <p class="text-gray-700">
                    <b>Number of Attendees</b>: {{ sale.attendee_count }}
                </p>
                <p class="text-gray-700">
                    <b>Total Revenue</b>: NPR {{ sale.total_revenue }}
                </p>
            {% endif %}
            <br>
            <button onclick="printTable('salesTable_{{ loop.index }}')"
                    class="px-3 py-1 text-black border border-gray-400 rounded-full hover:bg-gray-100">
                Print Sales
            </button>
            <br>
            <br>
        {% endfor %}
    {% else %}
        <p class="text-gray-600">No sales data found for your events.</p>
    {% endif %}
{% endblock %}
