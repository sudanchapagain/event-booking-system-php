{% extends "base.jinja" %}
{% block title %}Settings - Chautari{% endblock %}
{% block extra_css %}{% endblock %}
{% block content %}
    <main class="max-w-xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mt-12">Settings</h1>
        {% if update_success %}
            <p class="text-green-600 text-center mb-4">Profile updated successfully!</p>
        {% elif errors %}
            <div class="text-red-600 text-center mb-4">
                {% for error in errors %}<p>{{ error }}</p>{% endfor %}
            </div>
        {% endif %}
        <form method="POST"
              action="/settings"
              class="border border-gray-300 rounded-lg p-8 bg-gray-50 mb-8">
            <label for="username" class="block mt-4 font-bold uppercase text-gray-500">Username</label>
            <input type="text"
                   id="username"
                   name="username"
                   class="w-full p-2 mt-1 rounded-md border border-gray-300 bg-gray-100 text-base font-bold text-gray-800"
                   value="{{ user.username }}"
                   required />
            <label for="user_phone" class="block mt-4 font-bold uppercase text-gray-500">Phone Number</label>
            <input type="text"
                   id="user_phone"
                   name="user_phone"
                   class="w-full p-2 mt-1 rounded-md border border-gray-300 bg-gray-100 text-base font-bold text-gray-800"
                   value="{{ user.user_phone | default("") }}" />
            <label for="email" class="block mt-4 font-bold uppercase text-gray-500">Email</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="w-full p-2 mt-1 rounded-md border border-gray-300 bg-gray-100 text-base font-bold text-gray-800"
                   value="{{ user.email }}"
                   required />
            <label for="password" class="block mt-4 font-bold uppercase text-gray-500">Password</label>
            <input type="password"
                   id="password"
                   name="password"
                   class="w-full p-2 mt-1 rounded-md border border-gray-300 bg-gray-100 text-base font-bold text-gray-800"
                   placeholder="Leave blank to keep current password" />
            <button type="submit"
                    class="block w-full p-3 text-center bg-[#ff6438] text-white rounded-md mt-4 no-underline hover:bg-[#ff6438] font-bold">
                Save
                Changes
            </button>
        </form>
    </main>
{% endblock %}
